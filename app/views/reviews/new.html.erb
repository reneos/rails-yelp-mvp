<div class="row">
  <h1>Adding review for "<%= @restaurant.name.titleize %>"</h1>
</div>

<div class="row">
  <%= simple_form_for [@restaurant, @review], html: { class: 'w-100' } do |f| %>
    <%= f.input :content %>
    <%= f.input :rating %>
    <%= f.submit "Create Review", class: "btn btn-outline-primary" %>
  <% end %>
</div>

